



<link rel="stylesheet" href="~/AdminLTE/plugins/summernote/summernote-bs4.min.css">
<!-- HERO SECTION-->

<section class="py-5">
	<h2 class="h6 text-uppercase mb-4">Sepetteki Ürünler</h2>
	<div class="content-fluid">
		<div class="row">
			<div class="col-lg-12">
				<!-- CART TABLE-->
				<div class="table-responsive mb-4">
					<table class="table text-nowrap">
						<thead class="bg-light">
							<tr>

								<th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Ürün</strong></th>
								<th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Ürün Adı</strong></th>
								<th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Eklenme Tarihi</strong></th>
								<th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Adet</strong></th>
								<th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Toplam Tutar</strong></th>
								<th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Ürün AktifMi</strong></th>
								<th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Ürün İptal Et</strong></th>
							</tr>
						</thead>
						<tbody class="border-0">
							@foreach (var item in Model)
							{
								<tr>
									<th class="ps-0 py-3 border-light" scope="row">
										<div class="d-flex align-items-center">
											<a class="reset-anchor d-block animsition-link" href="~/Anasayfa/DetailIndex"><img src="~/distribution/img/product-detail-3.jpg" alt="..." width="70" /></a>
											<div class="ms-3"><strong class="h6"><a class="reset-anchor animsition-link" href="~/Anasayfa/DetailIndex">@item.Urunler</a></strong></div>
										</div>
									</th>
									<td class="p-3 align-middle border-light">
										<p class="mb-0 small">@item.UrunAdi</p>
									</td>
									<td class="p-3 align-middle border-light">
										<p class="mb-0 small">@item.EklenmeTarih</p>
									</td>
									<td class="p-3 align-middle border-light">
										<div class="border d-flex align-items-center justify-content-between px-3">
											@*  <span class="small text-uppercase text-gray headings-font-family"></span> *@
											<div class="quantity">
												<button class="dec-btn p-0"><i class="fas fa-caret-left"></i></button>
												<input class="form-control form-control-sm border-0 shadow-0 p-0" type="text" value="1" />
												<button class="inc-btn p-0"><i class="fas fa-caret-right"></i></button>
											</div>
										</div>
									</td>
									<td class="p-3 align-middle border-light">
										<p class="mb-0 small">@item.UrunFiyati</p>
									</td>

									<td class="p-3 align-middle border-light">
										<p class="mb-0 small">@item.AktifMi</p>
									</td>


									<td class="p-3 align-middle border-light"><a class="reset-anchor" href="javascript:void(0);" onclick="UrunuSil(@item.Id)"><i class="fas fa-trash-alt small text-muted"></i></a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<!-- CART NAV-->
				<div class="bg-light px-4 py-3">
					<div class="row align-items-center text-center">
						<div class="col-md-6 mb-3 mb-md-0 text-md-start"><a class="btn btn-link p-0 text-dark btn-sm" href="~/Urunler/UrunIndex.cshtml"><i class="fas fa-long-arrow-alt-left me-2"> </i>Alışverişe Devam Et</a></div>

					</div>
				</div>
			</div>
			<!-- ORDER TOTAL-->

		</div>
	</div>
	@foreach (var item in Model)
	{
		<div class="col-lg-8">
			<div class="card border-0 rounded-0 p-lg-4 bg-light">
				<div class="card-body">
					<h5 class="text-uppercase mb-4">Kart İşlemleri</h5>
					<ul class="list-unstyled mb-0">
						<li class="d-flex align-items-center justify-content-between"><strong class="text-uppercase small font-weight-bold">Toplam Tutar</strong><span class="text-muted small">@item.ToplamOdeme</span></li>
						<li class="border-bottom my-2"></li>

						<li class="d-flex align-items-center justify-content-between mb-4">
							<strong class="text-uppercase small font-weight-bold">Ödeme Şekli</strong>
							<div>
								<label>
									<input type="radio" name="OdemeSekli" value="Nakit" @item.OdemeSekli= =item.Id ? "checked" : "" ) />
									Taksitli
								</label>
								<label>
									<input type="radio" name="OdemeSekli" value="Kart" @item.OdemeSekli= =item.Id ? "checked" : "" ) />
									@item.OdemeSekli
								</label>
							</div>

						</li>

						<li>
							<form action="#">
								<div class="input-group mb-0">
									<strong class="text-uppercase small font-weight-bold">Müşteri Notu</strong>
									<input class="form-control" type="text" placeholder="Özel istekleriniz için yazabilirsiniz">

								</div>
							</form>
						</li>
						<li>
							<form action="#">
								<div class="input-group mb-0">
									<strong class="text-uppercase small font-weight-bold">Kart Numarası</strong>
									<input class="form-control" type="text" placeholder="art numaranızı buraya girin">
									<button class="btn btn-dark btn-sm w-100" type="submit"><i class="fas fa-dollar"></i>Ödemeyi Yap</button>
								</div>
							</form>
						</li>
					</ul>
				</div>
			</div>
		</div>
	}
</section>

<script src="~/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>
<script src="~/sepetscript/sepetsil.js"></script>