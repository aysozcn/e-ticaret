@using ETicaret.Core.DTO

@model List<GetYorumlarWithKullanicilarDTO>

<div class="comments" id="yorumAlani">

    @foreach (var item in Model)
    {
        // makaleId = item.Makaleler_MakalelerID;

        if (item.YorumUstId == 0)//Ana yorumları getirir. Ana yoorumların UstID değeri  0 dır
        {
            <div class="comment d-flex mb-4">

                <div class="flex-shrink-0">
                    <div class="avatar avatar-sm rounded-circle">
                        <img class="avatar-img img-fluid" src="~/template/assets/img/person-5.jpg" alt="">
                    </div>
                </div>
                <div class="flex-grow-1 ms-2 ms-sm-3">
                    <div class="comment-meta d-flex align-items-baseline">
                        <h6 class="me-2">@(item.Kullanicilar.Adi + " " + item.Kullanicilar.Soyadi)</h6>
                        <span class="text-muted">@* 2d *@</span>
                    </div>
                    <div class="comment-body">
                        @item.Yorum
                    </div>

                    <div class="comment-replies bg-light p-3 mt-3 rounded">
                        <!--Alt yorumların listesi-->
                        @foreach (var itemAltYorum in Model)
                        {
                            if (itemAltYorum.YorumUstId == item.Id)//Bir üstId değeri, bir yorumunId değerine eşit ise o yorums yspılmış bir alt yorum olduğunu gösterir.
                            {
                                <div class="comment-meta d-flex align-items-baseline">
                                    <h6 class="me-2">@(item.Kullanicilar.Adi + " " + item.Kullanicilar.Soyadi)</h6>
                                    <span class="text-muted">@* 2d *@</span>
                                </div>
                                <div class="comment-body">
                                    @item.Yorum
                                </div>   
                            }
                        }
                    </div>
                </div>
            </div>

        }
    }
</div><!-- End Comments -->
<!-- ======= Comments Form ======= -->
<form asp-action="AdminPanel/Yorumlar/YorumEkleIndex" id="yorumEkleIndex" asp-controller="Areas/AdminPanel/Yorumlar" method="post">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-12">
            <h5 class="comment-title">Yorum Ekle</h5>
            <div class="row">
                <div class="col-lg-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Adi">Adı</label>
                        <input name="Adi" asp-for="Adi" type="text" class="form-control" placeholder="Adı">
                        <span asp-validation-for="Adi" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input name="Email" asp-for="Email" type="text" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 mb-3">
                    <label for="comment-message">Yorum</label>

                    <textarea name="Yorum" asp-for="Yorum" class="form-control" id="comment-message" placeholder="Yorumunuzu giriniz.." cols="30" rows="10"></textarea>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-danger" value="Yorum Ekle" />
        </div>
    </div><!-- End Comments Form -->
</form>