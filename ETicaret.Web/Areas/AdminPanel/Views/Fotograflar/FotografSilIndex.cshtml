@using ETicaret.Core.ETicaretDatabase

@model Fotograflar

@{
    ViewData["Title"] = "FotografSilIndex";
    
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active"><a href="~/AdminPanel/Fotograflar/FotografSilIndex/#">Fotoğraf Sil</a></li>
                    <li class="breadcrumb-item"><a href="~/AdminPanel/Fotograflar/FotograflarIndex">Fotoğraf Listesi</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Fotoğraf Sil</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="FotografSilIndex" id="fotografSilIndex" asp-controller="Fotograflar" method="post">

                        <div class="form-group" style="margin:30px 0px 30px 30px">
                            @Html.LabelFor(model => model.AktifMi, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.AktifMi)
                                    @Html.ValidationMessageFor(model => model.AktifMi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <input type="submit" class="btn btn-danger" value="Fotoğraf Sil" />
                        </div>
                        <div>
                            @Html.Raw(TempData["hataMesaji"])
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary {

    <script src="~/AdminLTE/plugins/jquery-validation/jquery.validate.js"></script>
}