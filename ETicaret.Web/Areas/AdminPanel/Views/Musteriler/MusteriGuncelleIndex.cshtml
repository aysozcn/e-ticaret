@using ETicaret.Core.ETicaretDatabase

@model Musteriler


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/Musteriler/MusterilerIndex">Müşteri Listesi</a></li>
                    <li class="breadcrumb-item active">Müşteri Güncelle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Müşteri Güncelle</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="MusteriGuncelleIndex" id="musteriGuncelleIndex" asp-controller="Musteriler" method="post">

                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Adi">Adı</label>
                                <input name="Adi" asp-for="Adi" type="text" class="form-control" value="@Model.Adi">
                                <span asp-validation-for="Adi" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Soyadi">Soyadı</label>
                                <input name="Soyadi" asp-for="Soyadi" type="text" class="form-control" value="@Model.Soyadi">
                                <span asp-validation-for="Soyadi" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Cinsiyet">Cinsiyet</label>
                                <input name="Cinsiyet" asp-for="Cinsiyet" type="text" class="form-control" value="@Model.Cinsiyet">
                                <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Telefonu">Telefon</label>
                                <input name="Telefonu" asp-for="Telefonu" type="number" class="form-control" value="@Model.Telefonu">
                                <span asp-validation-for="Telefonu" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Meslek">Meslek</label>
                                <input name="Meslek" asp-for="Meslek" type="text" class="form-control" value="@Model.Meslek">
                                <span asp-validation-for="Meslek" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DogumTarihi">Doğum Tarihi</label>
                                <input name="DogumTarihi" asp-for="DogumTarihi" type="text" class="form-control" value="@Model.DogumTarihi">
                                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                            </div>

                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <input type="submit" class="btn btn-warning" value="Müşteri Güncelle" />
                        </div>
                        <div>
                            @Html.Raw(TempData["hataMesaji"])
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary {

    <script src="~/AdminLTE/plugins/jquery-validation/jquery.validate.js"></script>
    <script>
        $(function () {

            $('#urunKeydetIndex').validate({
                rules: {
                    makaleKategori: {
                        required: true
                    },
                    makaleBaslik: {
                        required: true
                    },
                    makaleIcerik: {
                        required: true
                    }

                },
                messages: {
                    makaleKategori: {
                        required: "Makale Kategori alanı zorunludur"
                    },
                    makaleBaslik: {
                        required: "Başlık alanı zorunludur"
                    },
                    makaleIcerik: {
                        required: "Makale İçerik alanı zorunludur"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });

    </script>
}

