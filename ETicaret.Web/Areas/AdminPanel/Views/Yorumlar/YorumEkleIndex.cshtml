@using ETicaret.Core.DTO
@model GetYorumlarWithKullanicilarDTO

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminPanel/Yorumlar/YorumlarIndex">Yorum Listesi</a></li>
                    <li class="breadcrumb-item active">Yorum Ekle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">YORUM EKLE</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="YorumEkleIndex" id="yorumEkleIndex" asp-controller="Yorumlar" method="post">

                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="UrunId">Urun Id</label>
                                <input name="UrunId" asp-for="UrunId" type="text" class="form-control" placeholder="UrunId">
                                <span asp-validation-for="UrunId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="KullaniciId">Kullanıcı Id</label>
                                <input name="KullaniciId" asp-for="KullaniciId" type="text" class="form-control" placeholder="KullaniciId">
                                <span asp-validation-for="KullaniciId" class="text-danger"></span>
                            </div>
                            @* <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input name="Email" asp-for="Email" type="text" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div> *@

                            <div class="form-group">
                                <label asp-for="YorumUstId">YorumUstId</label>
                                <input name="YorumUstId" asp-for="YorumUstId" type="text" class="form-control" placeholder="YorumUstId">
                                <span asp-validation-for="YorumUstId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Yorum">Yorum</label>
                                <input name="Yorum" asp-for="Yorum" type="text" class="form-control" placeholder="Yorum">
                                <span asp-validation-for="Yorum" class="text-danger"></span>
                            </div>



                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <input type="submit" class="btn btn-success" value="Yorum Ekle" />
                        </div>
                        <div>
                            @Html.Raw(ViewBag.mesaj)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary {

    <script src="~/AdminLTE/plugins/jquery-validation/jquery.validate.js"></script>
    <script>
        $(function () {

            $('#yorumEkleIndex').validate({
                rules: {
                    Adi: {
                        required: true
                    },
                    Soyadi: {
                        required: true
                    },
                    Email: {
                        required: true
                    },
                    YorumUstId: {
                        required: true
                    },
                    Yorum: {
                        required: true
                    }

                },
                messages: {
                    Adi: {
                        required: "Adi alanı zorunludur"
                    },
                    Soyadi: {
                        required: "Soyadi alanı zorunludur"
                    },
                    Email: {
                        required: "Email İçerik alanı zorunludur"
                    },
                    YorumUstId: {
                        required: "YorumustId İçerik alanı zorunludur"
                    },
                    Yorum: {
                        required: "Yorum İçerik alanı zorunludur"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });

    </script>
}
